<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/tv_showScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_new_game"
        style="@style/StyleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="بازی مجدد"
        app:layout_constraintEnd_toEndOf="@+id/tv_showScore"
        app:layout_constraintStart_toStartOf="@+id/tv_showScore"
        app:layout_constraintTop_toBottomOf="@+id/tv_showScore" />

    <Button
        android:id="@+id/btn_exit"
        style="@style/StyleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="خروج"
        app:layout_constraintEnd_toEndOf="@+id/btn_new_game"
        app:layout_constraintStart_toStartOf="@+id/btn_new_game"
        app:layout_constraintTop_toBottomOf="@+id/btn_new_game" />
</androidx.constraintlayout.widget.ConstraintLayout>